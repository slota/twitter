<nav>
  <div class="nav-wrapper">
    <a href="#" class="brand-logo center"></a>
    <a href="#" class="brand-logo">Welcome to Slota Twitter</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
    <% if current_user%>
      <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end %>
    </ul>
  </div>
</nav>

<div class="row">
  <div class="col s3">
        <!-- Grey navigation panel -->

    <% if current_user %>
      <p>Hello, <%= @user.name %></p>
      <%= image_tag @user.profile_image_url %><br>
      <%= @user.description %><br>
      My followers count:<%= @user.followers_count %><br>
      My friends count: <%= @user.friends_count %><br>
      My tweet number: <%= @user.description %><br>
  </div>
  <br><br>

  <div class="col s9">
            <!-- Teal page content  -->

    <p>
    <%= form_for :tweet, url: tweets_path, method: :post do |f| %>
      <%= f.text_field :message %>
      <%= f.submit "Tweet" %>
    <% end %>

    </p>

    <ul><% @twitter_data.user_timeline.take(10).each do |tweet| %>
      <li>
        <%= tweet.text %>
        Favorited:<%= tweet.favorite_count %>
        <%= button_to "like", tweet_path(tweet.id), method: :put %>
      </li>
    <% end %></ul>

  <% end %>
  </d iv>
</div>
